<%- contentFor('content') %>

<div class="error-container">
    <div class="error-icon">
        <i class="fas fa-exclamation-circle"></i>
    </div>
    <h1>Oops! Something went wrong</h1>
    <p class="error-message"><%= message %></p>
    <a href="/" class="back-home-btn">Return to Home</a>
</div>

<style>
    .error-container {
        max-width: 600px;
        margin: 4rem auto;
        text-align: center;
        padding: 3rem;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }
    
    .error-icon {
        font-size: 4rem;
        color: #e74c3c;
        margin-bottom: 2rem;
    }
    
    .error-container h1 {
        margin-bottom: 1rem;
        color: #2c3e50;
    }
    
    .error-message {
        margin-bottom: 2rem;
        color: #555;
        font-size: 1.2rem;
    }
    
    .back-home-btn {
        display: inline-block;
        padding: 1rem 2rem;
        background-color: #3498db;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }
    
    .back-home-btn:hover {
        background-color: #2980b9;
    }
</style> 