<%- contentFor('content') %>

<div class="apartment-details-page">
    <div class="breadcrumb">
        <a href="/" class="back-link"><i class="fas fa-chevron-left"></i> Back to search</a>
    </div>

    <div class="apartment-header">
        <h1><%= apartment.title %></h1>
        <div class="apartment-subheader">
            <div class="rating-location">
                <span class="rating"><i class="fas fa-star"></i> 4.91</span>
                <span class="review-count">• 128 reviews</span>
                <span class="location-dot">•</span>
                <span class="location"><%= apartment.location %></span>
            </div>
            <div class="action-buttons">
                <button class="action-btn"><i class="fas fa-share"></i> Share</button>
                <button class="action-btn"><i class="far fa-heart"></i> Save</button>
            </div>
        </div>
    </div>

    <div class="apartment-gallery">
        <% if (apartment.images && apartment.images.length > 0) { %>
            <% if (apartment.images.length === 1) { %>
                <div class="single-image">
                    <img src="<%= apartment.images[0] %>" alt="<%= apartment.title %>">
                </div>
            <% } else { %>
                <div class="gallery-grid">
                    <div class="main-image">
                        <img src="<%= apartment.images[0] %>" alt="<%= apartment.title %>">
                    </div>
                    <div class="gallery-small">
                        <% for (let i = 1; i < Math.min(5, apartment.images.length); i++) { %>
                            <div class="small-image">
                                <img src="<%= apartment.images[i] %>" alt="<%= apartment.title %> image <%= i+1 %>">
                            </div>
                        <% } %>
                    </div>
                </div>
                <button class="show-all-photos">Show all photos</button>
            <% } %>
        <% } else { %>
            <div class="single-image">
                <img src="https://via.placeholder.com/1200x800?text=No+Images+Available" alt="No images available">
            </div>
        <% } %>
    </div>

    <div class="apartment-info-container">
        <div class="apartment-info">
            <div class="host-section">
                <h2>Entire <%= apartment.type %> hosted by John</h2>
                <div class="apartment-specs">
                    <span><%= apartment.bedrooms %> bedroom<%= apartment.bedrooms !== 1 ? 's' : '' %></span>
                    <span>•</span>
                    <span><%= apartment.bathrooms %> bathroom<%= apartment.bathrooms !== 1 ? 's' : '' %></span>
                    <span>•</span>
                    <span><%= apartment.area %> sq ft</span>
                </div>
                <div class="host-profile">
                    <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="Host profile" class="host-image">
                </div>
            </div>

            <div class="highlights">
                <div class="highlight-item">
                    <div class="highlight-icon">
                        <i class="fas fa-door-open"></i>
                    </div>
                    <div class="highlight-content">
                        <h3>Self check-in</h3>
                        <p>Check yourself in with the keypad.</p>
                    </div>
                </div>
                <div class="highlight-item">
                    <div class="highlight-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="highlight-content">
                        <h3>Great location</h3>
                        <p>90% of recent guests gave the location a 5-star rating.</p>
                    </div>
                </div>
                <div class="highlight-item">
                    <div class="highlight-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div class="highlight-content">
                        <h3>Free cancellation before check-in</h3>
                        <p>Cancel before check-in for a full refund.</p>
                    </div>
                </div>
            </div>

            <div class="apartment-description">
                <h2>About this space</h2>
                <p><%= apartment.description %></p>
                <button class="show-more-btn">Show more <i class="fas fa-chevron-down"></i></button>
            </div>

            <div class="amenities-section">
                <h2>What this place offers</h2>
                <div class="amenities-grid">
                    <div class="amenity-item">
                        <i class="fas fa-wifi"></i>
                        <span>Wifi</span>
                    </div>
                    <div class="amenity-item">
                        <i class="fas fa-parking"></i>
                        <span>Free parking</span>
                    </div>
                    <div class="amenity-item">
                        <i class="fas fa-tv"></i>
                        <span>TV</span>
                    </div>
                    <div class="amenity-item">
                        <i class="fas fa-snowflake"></i>
                        <span>Air conditioning</span>
                    </div>
                    <div class="amenity-item">
                        <i class="fas fa-utensils"></i>
                        <span>Kitchen</span>
                    </div>
                    <div class="amenity-item">
                        <i class="fas fa-washer"></i>
                        <span>Washer</span>
                    </div>
                </div>
                <button class="show-all-amenities">Show all amenities</button>
            </div>
        </div>

        <div class="booking-card" 
             data-apartment-price="<%= apartment.price %>" 
             data-apartment-title="<%= apartment.title %>">
            <div class="booking-card-header">
                <div class="price-info">
                    <span class="price">$<%= apartment.price %></span> night
                </div>
                <div class="rating-info">
                    <i class="fas fa-star"></i> 4.91 <span class="review-count-small">• 128 reviews</span>
                </div>
            </div>
            <div class="booking-form">
                <div class="date-picker">
                    <div class="check-in">
                        <label>CHECK-IN</label>
                        <input type="text" placeholder="Add date" id="bookingCheckIn">
                    </div>
                    <div class="check-out">
                        <label>CHECKOUT</label>
                        <input type="text" placeholder="Add date" id="bookingCheckOut">
                    </div>
                </div>
                <div class="guests-select">
                    <label>GUESTS</label>
                    <select id="guestCount">
                        <option value="1">1 guest</option>
                        <option value="2">2 guests</option>
                        <option value="3">3 guests</option>
                        <option value="4">4 guests</option>
                        <option value="5">5 guests</option>
                    </select>
                </div>
                <button class="reserve-btn" id="reserveBtn">Reserve</button>
                <p class="no-charge-text">You won't be charged yet</p>
                
                <div class="price-breakdown">
                    <div class="price-item">
                        <span>$<%= apartment.price %> x <span id="nightCount">5</span> nights</span>
                        <span id="totalNightPrice">$<%= apartment.price * 5 %></span>
                    </div>
                    <div class="price-item">
                        <span>Cleaning fee</span>
                        <span>$75</span>
                    </div>
                    <div class="price-item">
                        <span>Service fee</span>
                        <span id="serviceFee">$<%= Math.round(apartment.price * 5 * 0.15) %></span>
                    </div>
                    <div class="price-item total">
                        <span>Total before taxes</span>
                        <span id="totalPrice">$<%= apartment.price * 5 + 75 + Math.round(apartment.price * 5 * 0.15) %></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

