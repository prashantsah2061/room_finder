<script>
    // For demo purposes - these would be connected to real functionality in a production app
    document.querySelectorAll('.show-all-photos, .show-more-btn, .show-all-amenities').forEach(button => {
        button.addEventListener('click', () => {
            alert('This button would reveal more content in a complete implementation.');
        });
    });
    
    // Get apartment data from data attributes
    const bookingCard = document.querySelector('.booking-card');
    const apartmentPrice = parseInt(bookingCard.dataset.apartmentPrice, 10);
    const apartmentTitle = bookingCard.dataset.apartmentTitle;
    
    // Date picker functionality (placeholder)
    const dateInputs = [document.getElementById('bookingCheckIn'), document.getElementById('bookingCheckOut')];
    let startDate = null;
    let endDate = null;
    
    dateInputs.forEach((input, index) => {
        input.addEventListener('focus', () => {
            // In production, this would be replaced with a real date picker
            const today = new Date();
            
            if (index === 0) { // Check-in
                const dateStr = prompt('Enter check-in date (MM/DD/YYYY):', formatDate(today));
                if (dateStr) {
                    startDate = new Date(dateStr);
                    input.value = formatDate(startDate);
                    
                    // If we already have an end date, calculate nights
                    if (endDate) {
                        calculatePrices();
                    }
                }
            } else { // Check-out
                if (!startDate) {
                    alert('Please select a check-in date first');
                    return;
                }
                
                const tomorrow = new Date(startDate);
                tomorrow.setDate(tomorrow.getDate() + 1);
                
                const dateStr = prompt('Enter check-out date (MM/DD/YYYY):', formatDate(tomorrow));
                if (dateStr) {
                    endDate = new Date(dateStr);
                    
                    // Validate end date is after start date
                    if (endDate <= startDate) {
                        alert('Check-out date must be after check-in date');
                        endDate = null;
                        return;
                    }
                    
                    input.value = formatDate(endDate);
                    calculatePrices();
                }
            }
        });
    });
    
    function formatDate(date) {
        return date ? (date.getMonth() + 1) + '/' + date.getDate() + '/' + date.getFullYear() : '';
    }
    
    function calculatePrices() {
        if (!startDate || !endDate) return;
        
        // Calculate number of nights
        const nights = Math.round((endDate - startDate) / (1000 * 60 * 60 * 24));
        
        if (nights < 1) {
            alert('Please select at least 1 night');
            return;
        }
        
        const pricePerNight = apartmentPrice;
        const nightsTotal = pricePerNight * nights;
        const serviceFee = Math.round(nightsTotal * 0.15);
        const total = nightsTotal + 75 + serviceFee;
        
        // Update display
        document.getElementById('nightCount').textContent = nights;
        document.getElementById('totalNightPrice').textContent = '$' + nightsTotal;
        document.getElementById('serviceFee').textContent = '$' + serviceFee;
        document.getElementById('totalPrice').textContent = '$' + total;
    }
    
    // Reserve button
    document.getElementById('reserveBtn').addEventListener('click', () => {
        if (!startDate || !endDate) {
            alert('Please select check-in and check-out dates');
            return;
        }
        
        const guestCount = document.getElementById('guestCount').value;
        const nights = Math.round((endDate - startDate) / (1000 * 60 * 60 * 24));
        const total = document.getElementById('totalPrice').textContent;
        
        // Check if user is logged in
        const token = localStorage.getItem('token');
        if (!token) {
            if (confirm('You need to be logged in to make a reservation. Go to login page?')) {
                window.location.href = '/login';
            }
            return;
        }
        
        // In a real app, this would send the booking data to the server
        const bookingMessage = 'Booking details:';
        const apartmentDetail = 'Apartment: ' + apartmentTitle;
        const datesDetail = 'Dates: ' + formatDate(startDate) + ' to ' + formatDate(endDate);
        const guestsDetail = 'Guests: ' + guestCount;
        const totalDetail = 'Total: ' + total;
        const noteDetail = 'This would create a booking in a production application.';
        alert(bookingMessage + '\n' + apartmentDetail + '\n' + datesDetail + '\n' + guestsDetail + '\n' + totalDetail + '\n\n' + noteDetail);
    });
    
    // Share and save buttons
    document.querySelectorAll('.action-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            const action = e.currentTarget.textContent.trim().includes('Share') ? 'Share' : 'Save';
            alert(action + ' functionality would be implemented in a production application.');
            
            if (action === 'Save') {
                const icon = btn.querySelector('i');
                icon.classList.toggle('far');
                icon.classList.toggle('fas');
                if (icon.classList.contains('fas')) {
                    icon.style.color = '#FF385C';
                } else {
                    icon.style.color = 'inherit';
                }
            }
        });
    });
</script> 